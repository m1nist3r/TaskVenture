<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.m1nist3r.taskventure">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyTheme">
        <activity
            android:name=".activities.MainAppActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.auth.SignUpActivity"
            android:label="@string/label_mainapp" />
        <activity
            android:name=".activities.MyAccountActivity"
            android:label="@string/label_mainapp" />
        <activity
            android:name=".activities.CustomSetsActivity"
            android:label="@string/label_mainapp" />
        <activity
            android:name=".activities.CustomTasksActivity"
            android:label="@string/label_mainapp" />
        <activity
            android:name=".activities.CreateGameActivity"
            android:label="@string/label_mainapp" />
        <activity
            android:name=".activities.GameActivity"
            android:label="@string/label_mainapp" />
        <activity
            android:name=".activities.SelectGroupTaskActivity"
            android:label="@string/label_mainapp" />
        <activity
            android:name=".activities.AddTaskToGroupActivity"
            android:label="@string/label_mainapp" />
        <activity
            android:name =".activities.PaymentActivity"
            android:label="@string/label_mainapp" />
        <activity
            android:name =".activities.EndGameStatisticActivity"
            android:label="@string/label_mainapp" />

        <meta-data
            android:name="com.google.android.gms.wallet.api.enabled"
            android:value="true" />
    </application>

</manifest>